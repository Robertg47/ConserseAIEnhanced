<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox alignment="CENTER" spacing="10">
            <ImageView fx:id="screenshotImageView" fitHeight="400" fitWidth="450" preserveRatio="true" />
            <HBox alignment="CENTER" spacing="10">
                <Button text="Retake" onAction="#takeScreenshot" />
                <Button text="Process" onAction="#process" />
            </HBox>
            <TextField fx:id="ocrResponse" prefWidth="250" promptText="Enter text here" />
            <Button text="Ask ChatGPT" onAction="#process" />
            <Label fx:id="chatGPTResponseLabel" />
        </VBox>
    </content>
</DialogPane>
