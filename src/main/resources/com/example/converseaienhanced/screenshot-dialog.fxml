<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.text.Text?>
<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox alignment="CENTER" spacing="10">
            <ImageView fx:id="screenshotImageView" fitHeight="400" fitWidth="450" preserveRatio="true" />
            <HBox alignment="CENTER" spacing="10">
                <Button text="🔁" onAction="#takeScreenshot" styleClass="green-button-large" />
                <Button text="🚀" onAction="#process" styleClass="green-button-large"/>
            </HBox>
            <Text fx:id="ocrResponse"/>
            <Button text="send To ChatGPT" onAction="#chatGptRequest" styleClass="green-button-large"/>
            <Text fx:id="chatGPTResponseLabel" />
        </VBox>
    </content>
</DialogPane>
